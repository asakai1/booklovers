<div class="container">
  <div class="row no-gutter">
    <div class="mx-auto mt-5">
      <!--エラーメッセージ-->
      <% if @genre.errors.any? %></p>
        <%= @genre.errors.count %>件のエラーが発生しました。
          <ul class="list-unstyled text-danger">
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <!--ジャンルの編集-->
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
          <%= f.text_field :name, class:"p-1 mr-3" %></br>
          <%= f.submit '更新する', class:"btn btn-outline-dark mt-3" %>
      <% end %>
    </div>
  </div>
</div>