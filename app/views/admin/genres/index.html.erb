<div>
  <div>
    <%= flash[:notice] %>
    <!--ジャンルの追加-->
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <h4>ジャンル名</h4>
      <%= f.text_field :name %>
      <%= f.submit '追加する' %>
    <% end %>
    <!--ジャンル一覧の表示-->
    <table>
      <thead>
        <th>ジャンル名</th>
        <th></th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>