<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="mx-auto mt-5">
      <h4>会員一覧</h4>
      <table class="table mt-3">
        <thead>
          <tr>
            <th>会員名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, admin_user_path(user.id) %></td>
              <td><%= user.email %></td>
              <td><%= user.is_deleted ? "退会済み" : "有効" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>