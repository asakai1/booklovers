<div class="container">
  <div class="row">
    <div class="mx-auto mt-5">
      <h2>管理者ログイン</h2>
      <!--エラーメッセージ-->
      <% if @admin.errors.any? %>
        <p class="text-danger"><%= @admin.errors.count %>件のエラーが発生しました。</p>
          <ul class="list-unstyled text-danger">
            <% @admin.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <%= f.text_field :email, autofocus: true, placeholder:"メールアドレス" %></br>
        <%= f.password_field :password, placeholder: "パスワード", class:"mt-3" %></br>
        <%= f.submit "ログイン", class:"btn btn-outline-dark mt-3" %>
      <% end %>
    </div>
  </div>
</div>