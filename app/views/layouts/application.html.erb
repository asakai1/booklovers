<!DOCTYPE html>
<html>
  <head>
    <title>Booklovers</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <li>
          <%= link_to "探す一覧", find_books_path %>
        </li>
        <li>
          <%= link_to "おすすめ一覧", suggest_books_path %>
        </li>
        <li>
          <%= link_to "マイページ", user_path(current_user.id) %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
        <div>
          <%= form_with url: finder_path, method: :get, local: :true do |f| %>
            <%= f.select :range, options_for_select([["探している書籍",'FindBook'], ["おすすめ書籍",'SuggestBook']]) %>
            <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
            <%= f.text_field :word %>
            <%= f.submit "検索" %>
          <% end %>
        </div>
      <% elsif admin_signed_in? %>
        <li>
          <%= link_to "ジャンル一覧", genres_path %>
        </li>
        <li>
          <%= link_to "探す一覧", find_books_path %>
        </li>
        <li>
          <%= link_to "おすすめ一覧", suggest_books_path %>
        </li>
        <li>
          <%= link_to "会員一覧", admin_root_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
        <li>
          <%= link_to "ゲストログイン", guest_sign_in_path, method: :post %>
        </li>
        <li>
          <%= link_to "About" %>
        </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
