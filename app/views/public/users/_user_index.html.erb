<div class="d-flex flex-wrap">
  <% books.each do |book| %>
    <div class="card col-md-6">
      <div class="card-body">
        <h5 class="card-title"><%= link_to book.title, book %></h5>
        <p class="card-text"><%= book.author %></p>
        <p class="card-text"><%= book.body %></p>
        <p class="card-text">ジャンル：<%= book.genre.name %></p>
      </div>
    </div>
  <% end %>
</div>
