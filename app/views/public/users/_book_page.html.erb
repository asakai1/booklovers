<div class="container">
  <div class="mt-3">
    <h4>書籍名：<%= book.title %></h4>
    <h5>著者：<%= book.author %></h5>
    <h5>書籍の説明：<%= book.body %></h5>
    <h5>ジャンル：<%= book.genre.name %></h5>
    <div class="row">
      <div>
        <%= image_tag book.user.get_profile_image(200,200), class:"mt-3 rounded-circle"; %>
      </div>
      <div class="mt-5">
        <h5>投稿者：<%= link_to book.user.name, book.user %></h5>
        <h5>投稿日：<%= book.created_at.strftime('%Y/%m/%d') %></h5>
      </div>
    </div>
  </div>
</div>