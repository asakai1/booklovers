<div>
  <div>
    <div>
      <%= image_tag @user.get_profile_image(100,100) %>
    </div>
    <table>
      <tbody>
        <tr>
          <th>会員名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>紹介文</th>
          <td><%= @user.introduction %></td>
        </tr>
      </tbody>
    </table>
    <% if @user == current_user %>
      <%= link_to "編集する", edit_user_path(current_user) %>
    <% end %>
  </div>
</div>