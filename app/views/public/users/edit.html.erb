<h2>会員情報編集</h2>

<%= form_with model: @user,url: update_user_path(current_user.id), method: :patch do |f| %>

  <div class="field">
    <%= f.label :'プロフィール画像' %><br />
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>

  </div>
  <div class="field">
    <%= f.label :"会員名" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :"紹介文" %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存する" %>
  </div>

  <div>
    <%= link_to "アカウントを削除する", destroy_user_path, method: :delete %>
  </div>
<% end %>