<div class="container">
  <div class="row">
    <div class="mx-auto mt-5">
      <h4>会員情報編集</h4>
      <!--エラーメッセージ-->
      <% if @user.errors.any? %>
        <p class="text-danger"><%= @user.errors.count %>件のエラーが発生しました。</p>
          <ul class="list-unstyled text-danger">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <%= form_with model: @user,url: update_user_path(current_user), method: :patch do |f| %>
        <%= f.label :'プロフィール画像' %><br />
        <%= f.file_field :profile_image, accept: "image/*" %>
        <h5 class="mt-3">会員名</h5>
        <%= f.text_field :name, autofocus: true %>
        <h5 class="mt-3">メールアドレス</h5>
        <%= f.text_field :email %>
        <h5 class="mt-3">紹介文</h5>
        <%= f.text_area :introduction %>
        <div class="mt-3">
          <%= f.submit '変更を保存する', class:"btn btn-outline-dark mr-3" %>
          <%= link_to "退会する", confirm_withdraw_path, class:"btn btn-outline-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>