<div class="container">
  <div class="row">
    <div class="mt-5">
      <%= image_tag user.get_profile_image(200,200) %>
    </div>
    <div class="col-lg-5 offset-lg-1">
    <h2 class="mt-3"><%= user.name %>さんのページ</h2>
    <table class="table mt-3">
      <tbody>
        <tr>
          <th>紹介文</th>
          <td><%= user.introduction %></td>
        </tr>
        <% if user == current_user %>
        <tr>
          <th>会員名</th>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= user.email %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集する", edit_user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>