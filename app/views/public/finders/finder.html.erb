<div>
  <div>
    <% if @range == "FindBook" %>
      <% @find_books.each do |find_book| %>
        <table>
          <tr>
            <th>
              <%=link_to find_book.title, find_book_path(find_book.id) %>
            </th>
            <td>
              <%= find_book.description %>
            </td>
          </tr>
        </table>
      <% end %>
    <% else %>
      <% @suggest_books.each do |suggest_book| %>
        <table>
          <tr>
            <th>
              <%=link_to suggest_book.title, suggest_book_path(suggest_book.id) %>
            </th>
            <td>
              <%= suggest_book.introduction %>
            </td>
          </tr>
        </table>
      <% end %>
    <% end %>
  </div>
</div>