<h2>会員ログイン</h2>

<%= "ゲストとしてログインされる方は" %>
<%= link_to "こちら", guest_sign_in_path, method: :post %>

<%= form_with model: @user, url: user_session_path do |f| %>
  <div class="field">
    <%= f.label :"会員名" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= "会員登録がお済みでない方は" %></br>
<%= link_to "こちら", new_user_registration_path %><%= "から会員登録してください" %>