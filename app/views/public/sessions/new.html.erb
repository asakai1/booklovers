<h2>会員ログイン</h2>

<%= "ゲストとしてログインされる方は" %>
<%= link_to "こちら", guest_sign_in_path, method: :post %>

<%= form_with model: @user, url: user_session_path do |f| %>
  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.text_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= "会員登録がお済みでない方は" %></br>
<%= link_to "こちら", new_user_registration_path %><%= "から会員登録してください" %>