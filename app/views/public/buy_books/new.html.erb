<div>
  <div>
    <p>発送先の情報を入力してください。</p>
    <%= form_with model: [@sell_book, @buy_book] do |f| %>
      <h4>購入者氏名</h4>
      <%= f.text_field :name %>
      <h4>郵便番号</h4>
      <%= f.text_field :postal_code %>
      <h4>住所</h4>
      <%= f.text_field :address %>
      <h4>電話番号</h4>
      <%= f.text_field :telephone_number %>
      <%= f.radio_button :payment_method, BuyBook.payment_methods.key(0) %>
      <%= f.label :payment_method_cash_on_delivery, BuyBook.payment_methods_i18n[:cash_on_delivery] %>
      <%= f.submit '購入を確定する' %>
    <% end %>
  </div>
</div>