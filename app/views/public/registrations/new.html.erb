<%= flash[:notice] %>
<%= render "public/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row no-gutters">
    <div class="mx-auto mt-5">
      <h2>新規会員登録</h2>
      <!--エラーメッセージ-->
      <% if @user.errors.any? %>
        <p class="text-danger"><%= @user.errors.count %>件のエラーが発生しました。</p>
          <ul class="list-unstyled text-danger">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= f.text_field :name, autofocus: true, placeholder: "会員名", class:"mt-3" %></br>
        <%= f.text_field :email, placeholder: "メールアドレス", class:"mt-3" %></br>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class:"mt-3" %></br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認)", class:"mt-3" %></br>
        <%= f.submit "新規登録", class:"btn btn-outline-dark mt-3" %>
      <% end %>
      <p class="mt-3">登録済みの方は</p>
      <p><%= link_to "こちら", new_user_session_path %>からログインしてください</p>
    </div>
  </div>
</div>