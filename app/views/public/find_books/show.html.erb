<div>
  <div>
    <div>
      <h2>書籍詳細</h2>
      <%= render 'public/users/book_page', book: @find_book %>
    </div>
    <div>
      <% if @find_book.user == current_user %>
        <%= link_to "編集する", edit_find_book_path(@find_book) %>
        <%= link_to "削除する", destroy_find_book_path(@find_book), method: :delete, data: { confirm: "投稿を削除しますか？"} %>
      <% else %>
        <div>
          <p>目撃情報<%= @find_book.post_informations.count %>件</p>
          <% @find_book.post_informations.each do |post_information| %>
            <p><%= image_tag post_information.user.get_profile_image(100,100) %></p>
            <%= post_information.user.name %>
            <%= post_information.created_at.strftime('%Y/%m/%d') %>
            <%= post_information.information %>
            <% if post_information.user == current_user %>
              <%= link_to "削除する", find_book_post_information_path(post_information.find_book, post_information), method: :delete %>
            <% end %>
          <% end %>
        </div>
        <div>
          <%= form_with model: [@find_book, @post_information] do |f| %>
            <%= f.text_area :information, row: '5', placeholder: "目撃情報はこちらへ" %>
            <%= f.submit "送信する" %>
          <% end %>
        </div>
    </div>
    <div>
      <h3>お持ちの書籍を出品する</h3>
      <%= form_with model: @sell_book do |f| %>
        <p>価格</p>
        <%= f.text_field :price %>
        <p>発送可能日</p>
        <p>購入確定から</p>
        <p><%= f.text_field :shipping_date %>日以内</p>
        <%= f.hidden_field :find_book_id, :value => @find_book.id %>
        <%= f.submit "出品する" %>
      <% end %>
    </div>
      <% end %>
    <div>
      <h3>出品一覧</h3>
      <p>出品数:<%= @find_book.sell_books.count %></p>
      <table>
        <thead>
          <tr>
            <th>出品者</th>
            <th>出品価格</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @find_book.sell_books.each do |sell_book| %>
            <tr>
              <td><%= sell_book.user.name %></td>
              <td><%= sell_book.price %></td>
              <td><%= sell_book.created_at.strftime('%Y/%m/%d') %></td>
              <!--ユーザーが出品者の場合、削除リンクを表示する-->
              <% if sell_book.user == current_user %>
                <% if sell_book.bought_by?(sell_book) %>
                  <td><%= link_to "発送先情報", sell_book_buy_books_path(sell_book) %></td>
                <% else %>
                  <td><%= link_to "取り消す", destroy_sell_book_path(sell_book), method: :delete, data: { confirm: "出品を取り消しますか？"} %></td>
                <% end %>
              <!--ユーザーが投稿者の場合、購入リンクを表示する-->
              <% elsif @find_book.user == current_user %>
                <% if sell_book.bought_by?(sell_book) %>
                  <td><%= link_to "購入情報", sell_book_buy_books_path(sell_book) %></td>
                <% else %>
                  <td><%= link_to "購入する", new_sell_book_buy_books_path(sell_book) %></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>